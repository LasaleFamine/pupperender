{
  "name": "pupperender",
  "version": "2.0.0",
  "description": "ExpressJs middleware for rendering PWA to bots using Puppeteer.",
  "license": "MIT",
  "repository": "LasaleFamine/pupperender",
  "bugs": {
    "url": "https://github.com/LasaleFamine/pupperender/issues",
    "email": "info@godev.space"
  },
  "homepage": "https://github.com/LasaleFamine/pupperender",
  "author": {
    "name": "LasaleFamine",
    "email": "info@godev.space",
    "url": "godev.space"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "release": "git pull && standard-version",
    "test": "xo && nyc ava",
    "test:travis": "yarn test && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test:veyor": "ava"
  },
  "files": [
    "src"
  ],
  "main": "src/index.js",
  "keywords": [
    "pupperender",
    "renderer",
    "pwa",
    "spa",
    "puppeter",
    "rendertron",
    "indexing",
    "bot"
  ],
  "dependencies": {
    "puppeteer": "2.1.1"
  },
  "devDependencies": {
    "ava": "3.6.0",
    "codecov": "3.6.5",
    "express": "4.17.1",
    "nyc": "15.0.1",
    "standard-version": "8.0.1",
    "supertest": "4.0.2",
    "xo": "0.28.3"
  },
  "xo": {
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off"
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
